
\newcommand{\cbpheaderbox}[1]{\parbox[b][2em][b]{0.4\linewidth}{\setstretch{0.8}#1}}
\usepackage{YAMLvars}
\begin{luacode*}
    YAMLvars.tabmidrule = 'gmidrule'
    function YAMLvars.xfm.headerbox(var, val)
      if var:find('r', 1, true) == 1 then
        val = '\\flushright '.. val
      end
      return '\\cbpheaderbox{'..val..'}'
    end
\end{luacode*}


