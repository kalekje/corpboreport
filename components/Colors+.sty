\NewDocumentCommand{\setaccentcolor}{m}{
    \colorlet{chapCol}{#1}
    \colorlet{secCol}{#1}
    \colorlet{subsecCol}{#1}
    \colorlet{subsubsecCol}{#1}
    \colorlet{parCol}{#1}
}

